<!doctype html>
<html>
<head>
    <meta charset="utf-8">
</head>

<body>
<script>
    window.addEventListener("message", function (ev) {

        if (ev.data === "requestCredentials") {
            ev.source.postMessage({
                message: "deliverCredentials",
                auth_token: '{{token}}',
                uid: '{{uid}}',

                '@class': 'voxxrin2.domain.User',
                _id: '{{user.id}}',
                name: '{{user.displayName}}',
                login: '{{user.login}}',
                displayName: '{{user.displayName}}',
                socialLogin: true
            }, '*');

            window.close();
        }
    });
</script>
</body>
</html>
